<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobilna.MainPage"
             BackgroundColor="#F5F5DC">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="10">

            <Label Text="Gra w kości" 
                   BackgroundColor="#A52A2A"          
                   TextColor="White"                  
                   FontSize="Large"
                   Padding="10"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="FillAndExpand" />

            <Button x:Name="RollButton"
                    Text="RZUĆ KOŚĆMI"
                    Clicked="RollButton_Clicked"
                    BackgroundColor="#D2691E"         
                    HorizontalOptions="Center"
                    Margin="0, 10" />

            <HorizontalStackLayout x:Name="DiceLayout"
                                   BackgroundColor="White"
                                   HorizontalOptions="FillAndExpand"
                                   Spacing="9" Padding="9">
                <Image x:Name="kostka1" Source="question.jpg" HeightRequest="60" Aspect="AspectFit" />
                <Image x:Name="kostka2" Source="question.jpg" HeightRequest="60" Aspect="AspectFit" />
                <Image x:Name="kostka3" Source="question.jpg" HeightRequest="60" Aspect="AspectFit" />
                <Image x:Name="kostka4" Source="question.jpg" HeightRequest="60" Aspect="AspectFit" />
                <Image x:Name="kostka5" Source="question.jpg" HeightRequest="60" Aspect="AspectFit" />
                <Image x:Name="kostka6" Source="question.jpg" HeightRequest="60" Aspect="AspectFit" IsVisible="False" />

            </HorizontalStackLayout>

            <Label x:Name="Losowanie" 
                   Text="Wynik tego losowania: 0"
                   HorizontalOptions="Center"
                   Margin="0, 10" />

            <Label x:Name="WynikGry" 
                   Text="Wynik gry: 0"
                   HorizontalOptions="Center"
                   Margin="0, 10" />

            <Button x:Name="ResetButton"
                    Text="RESETUJ WYNIK"
                    Clicked="ResetButton_Clicked"
                    BackgroundColor="#D2691E"         
                    HorizontalOptions="Center"
                    Margin="0, 10" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>